package projeto.maispop.sistema;

import java.time.LocalDate;
import java.time.format.DateTimeFormatter;

public final class DataLocal {
	
	public static String padronizaData(String dataNascimento, String padrao) {
		try {
			DateTimeFormatter formatador = DateTimeFormatter.ofPattern(padrao);
			LocalDate sData = LocalDate.parse(dataNascimento , formatador);
			return sData.toString();
		}catch()

	}

}
