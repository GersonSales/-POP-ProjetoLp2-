package projeto.maispop.testes;


import org.junit.Assert;
import org.junit.Test;

import projeto.maispop.excecoes.EntradaException;
import projeto.maispop.usuario.Postagem;
import projeto.maispop.usuario.PostagemFormat;

public class PostagemFormatTeste {

	@Test
	public void test() {

		try {
			Postagem postagem = new Postagem(
					"Nao sei porque tanto recalque, o que eh bonito eh pra se mostrar. <audio>musicas/poderosas.mp3</audio> #soulinda naza",
					"03/08/2015 08:21:00");

			postagem.getHashTags();
			Assert.assertEquals(
					"Nao sei porque tanto recalque, o que eh bonito eh pra se mostrar. <audio>musicas/poderosas.mp3</audio>",
					postagem.getMensagem());
		} catch (EntradaException erro) {
			Assert.assertEquals("Erro na hashtag: 'naza'.", erro.getMessage());
		}

		
		PostagemFormat formatador = PostagemFormat.getInstancia();
		String data="02/08/2015 09:30:00";

		String novaDataHora = formatador.formatData(data);
		System.out.println(novaDataHora.equals("2015-08-02 09:30:00"));
		//System.out.println(sData);
		
		
//		sData = LocalDate.of(sData.getYear(), sData.getMonth(),
//				Integer.parseInt(dataNascimento.substring(0, 2)));
//		this.dataNascimento = sData.toString();
		
		
		
		// expect
		// "Nao sei porque tanto recalque, o que eh bonito eh pra se mostrar. <audio>musicas/poderosas.mp3</audio> #soulinda #naza (2015-08-03 08:21:00)"
		// getPost post=1
		// expect
		// "Nao sei porque tanto recalque, o que eh bonito eh pra se mostrar. <audio>musicas/poderosas.mp3</audio>"
		// getPost atributo="Mensagem" post=1
		// expect "#soulinda,#naza" getPost atributo="Hashtags" post=1
		// expect "2015-08-03 08:21:00" getPost atributo="Data" post=1
		// expect
		// "Nao sei porque tanto recalque, o que eh bonito eh pra se mostrar."
		// getConteudoPost indice=0 post=1
		// expect "$arquivo_audio:musicas/poderosas.mp3" getConteudoPost
		// indice=1 post=1

	}
}