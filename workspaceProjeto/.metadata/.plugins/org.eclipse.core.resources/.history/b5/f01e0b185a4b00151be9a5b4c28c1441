public class PostagemFormatTeste {

	@Test
	public void test() {

		try {
			Postagem postagem = new Postagem(
					"Nao sei porque tanto recalque, o que eh bonito eh pra se mostrar. <audio>musicas/poderosas.mp3</audio> #soulinda naza",
					"03/08/2015 08:21:00");

			postagem.getHashTags();
			Assert.assertEquals(
					"Nao sei porque tanto recalque, o que eh bonito eh pra se mostrar. <audio>musicas/poderosas.mp3</audio>",
					postagem.getMensagem());
		} catch (EntradaException erro) {
			Assert.assertEquals("Erro na hashtag: 'naza'.", erro.getMessage());
		}
		
		String hora = "21-22-23";
		DateTimeFormatter formatador = DateTimeFormatter.ofPattern("HH-mm-ss");
		LocalTime horas = LocalTime.parse(hora, formatador);
		
		
		String dataHora = "02/08/2015 11:48:00";
		DateTimeFormatter  formatDataHora = DateTimeFormatter.ofPattern("dd/MM/yyyy HH:mm:ss");
		LocalDateTime sDataHora = LocalDateTime.parse(dataHora, formatDataHora);
		
		System.out.println(horas);
		System.out.println(sDataHora.format(DateTimeFormatter.ofPattern("yyyy/MM/dd HH:mm:ss")));
		
		//System.out.println(sData);
		
		
//		sData = LocalDate.of(sData.getYear(), sData.getMonth(),
